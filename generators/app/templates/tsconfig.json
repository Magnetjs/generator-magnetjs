{
    "compilerOptions": {
        "allowJs": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./dist",
        "types": [
          "node"
        ],
        "typeRoots": [
          "node_modules/@types",
          "node_modules/magnet-core"
        ]
    },

    "include": [
        "server/**/*",
        "local_modules/**/*"
    ],

    "exclude": [
        "node_modules/*",
        "dist/*",
        "database/*",
        "docs/*",
        "types/*",
        "test/*"
    ]
}
